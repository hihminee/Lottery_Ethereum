contract Lottery{
  address public manager;

 function Lottery() public {
     manager = msg.sender;
  }

}

msg 글로벌변수
property name
msg.data
msg.gas 
msg.sender  호출 주소
msg.value   보내진 이더의 양


참조 유형 reference Type

fixed array       고정 길이 배열  int[3]과 같은
dynamic array   동적배열         int[]
mapping         
struct


contract Test {
   string public myArray;
   
   function Test() public {
	      myArray.push("hi");
   }
   function getArray() public view returns (string[]){
         return myArray;
   }

//랜덤수를 반환하는 것
//sha3(); = keccak256(현재블록 난이도, 현재시간, 참가자들이 주소);
   function random() private view returns(uint){
          return uint(keccak256(block.difficulty, now, players));  
   }


//random ()  % playter.length =결과값이 players 배열의 인덱스값

  function pickWinner() public{
	      uint index = random() % players.length;     
	      players[index].transfer(this.balance);  
        players = new address[](0);

        //players[index] = 0x108908bcxxxx
        //transfer(1) 하나를 전송한다는 의미
        //balance  현재 계약에서 입력된 모든 돈의 양을players[index]로 전송한다는 뜻
        //players 초기화된 요소 없이 nothing  
 }

}
  
